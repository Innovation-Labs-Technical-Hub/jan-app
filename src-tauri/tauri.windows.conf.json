{
  "bundle": {
    "targets": ["nsis"],
    "resources": [
      "resources/pre-install/**/*",
      "resources/lib/",
      "binaries/**/*"
    ],
    "externalBin": ["resources/bin/bun", "resources/bin/uv"],
    "windows": {
      "signCommand": "powershell -ExecutionPolicy Bypass -File ./sign.ps1 %1"
    }
  }
}
